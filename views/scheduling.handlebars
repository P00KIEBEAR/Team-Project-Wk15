  <body>
    <div class="calendar" id="calendar">
      <div class="container">
        <div
          class="calendar-btn month-btn"
          onclick="$('#months').toggle('fast')"
        >
          <span id="curMonth"></span>
          <div id="months" class="months dropdown"></div>
        </div>

        <div class="calendar-btn modal-btn">
          <div id="myBtn">Choose Appointment</div>
          <div id="myModal" class="modal">
            <div class="modal-content">
              <span class="close">&times;</span>
              <h1>Appointments for <span id="back-date"></span></h1>
              <div class="container">
                <div><p>
                <span class="Appointments_date">{{appointments.Appointments_date}}</span> |
                <span class="Appointments_time">{{appointments.Appointments_time}}</span> |
                <span class="Appointments_text">{{appointments.Appointments_text}}</span>
              </p>
              </div>
              <div><button type="submit">Add</button></div>
              </div>
            </div>
          </div>
        </div>

        <div class="calendar-btn year-btn" onclick="$('#years').toggle('fast')">
          <span id="curYear"></span>
          <div id="years" class="years dropdown"></div>
        </div>
      </div>

      <div class="clear"></div>

      <div class="calendar-dates">
        <div class="days">
          <div class="day label">SUN</div>
          <div class="day label">MON</div>
          <div class="day label">TUE</div>
          <div class="day label">WED</div>
          <div class="day label">THU</div>
          <div class="day label">FRI</div>
          <div class="day label">SAT</div>

          <div class="clear"></div>
        </div>

        <div id="calendarDays" class="days"></div>
      </div>
    </div>
  </body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/javascript/scheduling.js"></script>